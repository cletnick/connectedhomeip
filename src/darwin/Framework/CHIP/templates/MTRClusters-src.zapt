- (void)dealloc
{
    // Must delete cppCluster on the Matter queue.
    dispatch_sync(chip::DeviceLayer::PlatformMgrImpl().GetWorkQueue(), ^{
        if (self.cppCluster != nullptr) {
            delete self.cppCluster;
        }
    });
}

