@implementation MTRCluster{{asUpperCamelCase name}}

- (instancetype)initWithDevice:(MTRDevice *)device endpoint:(uint16_t)endpoint queue:(dispatch_queue_t)queue
{
    if (self = [super initWithQueue:queue]) {
        if (device == nil) {
            return nil;
        }

        _endpoint = endpoint;
        _lock = OS_UNFAIR_LOCK_INIT;
        _device = device;
        _cppClusterInitWaitGroup = dispatch_group_create();
        dispatch_group_enter(_cppClusterInitWaitGroup);

        {{! start getting at the underlying device proxy and cppCluster asynchronously }}
        [device connectAndPerformAsync:^(chip::DeviceProxy * internalDevice) {
            os_unfair_lock_lock(&self->_lock);
            *[self cppClusterSlot] = new chip::Controller::{{asUpperCamelCase name}}Cluster(* internalDevice->GetExchangeManager(), internalDevice->GetSecureSession().Value(), endpoint);
            os_unfair_lock_unlock(&self->_lock);
            dispatch_group_leave(self.cppClusterInitWaitGroup);
        }];
    }
    return self;
}

- (chip::Controller::{{asUpperCamelCase name}}Cluster **) cppClusterSlot
{
    return &_cppCluster;
}

- (void) waitForCPPCluster:(NSNumber *)timeoutMs {
    {{! dispatch_time() delta is in nanoseconds - convert ms to ns }}
    if (!timeoutMs) {
        timeoutMs = @(10000);
    }
    dispatch_time_t waitTimeout = dispatch_time(DISPATCH_TIME_NOW, ((int64_t)timeoutMs.unsignedLongValue * 1000 * 1000));
    dispatch_group_wait(self.cppClusterInitWaitGroup, waitTimeout);
}

